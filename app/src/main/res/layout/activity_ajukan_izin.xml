<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_blue_purple"
    tools:context=".perizinan.PerizinanFragment">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perizinan"
        android:fontFamily="@font/fontutama"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Formulir Izin"
                        android:fontFamily="@font/fontutama"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/biru"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Mulai:"
                        android:fontFamily="@font/fontstandar"
                        android:layout_marginBottom="4dp"/>
                    <EditText
                        android:id="@+id/edtTanggalMulai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="yyyy-MM-dd"
                        android:fontFamily="@font/fontstandar"
                        android:inputType="date"
                        android:padding="10dp"
                        android:background="@drawable/rounded_light_blue_bg"
                        android:drawableEnd="@drawable/kalender"
                        android:drawablePadding="8dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Selesai:"
                        android:fontFamily="@font/fontstandar"
                        android:layout_marginBottom="4dp"/>
                    <EditText
                        android:id="@+id/edtTanggalSelesai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="yyyy-MM-dd"
                        android:fontFamily="@font/fontstandar"
                        android:inputType="date"
                        android:padding="10dp"
                        android:background="@drawable/rounded_light_blue_bg"
                        android:drawableEnd="@drawable/kalender"
                        android:drawablePadding="8dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenis Izin:"
                        android:fontFamily="@font/fontstandar"
                        android:layout_marginBottom="4dp"/>
                    <Spinner
                        android:id="@+id/spinnerJenisIzin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/jenis_izin_array"
                        android:paddingVertical="10dp"
                        android:background="@drawable/rounded_dropdown_background"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keterangan Tambahan:"
                        android:fontFamily="@font/fontstandar"
                        android:layout_marginBottom="4dp"/>
                    <EditText
                        android:id="@+id/edtKeterangan"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="top"
                        android:hint="Tambahkan alasan disini..."
                        android:textColor="@color/biru"
                        android:fontFamily="@font/fontstandar"
                        android:padding="10dp"
                        android:background="@drawable/rounded_light_blue_bg"
                        android:layout_marginBottom="20dp"/>

                    <Button
                        android:id="@+id/btnKirimIzin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kirim"
                        android:fontFamily="@font/fontutama"
                        android:textColor="@android:color/white"
                        android:background="#0A6EDC"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvStatusHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Perizinan"
                android:fontFamily="@font/fontutama"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/containerStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
