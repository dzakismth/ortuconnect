<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_circle_blue"
            android:layout_marginEnd="12dp">

            <!-- Waktu Kegiatan -->
            <TextView
                android:id="@+id/tv_kegiatan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07.00"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                tools:ignore="SmallSp" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_kegiatan_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rapat Persiapan Ujian Tengah Semester"
                android:fontFamily="@font/fontutama"
                android:textColor="@color/biru"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tv_kegiatan_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruang Guru Lantai 2"
                android:fontFamily="@font/fontstandar"
                android:textColor="@color/blue_dark"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
