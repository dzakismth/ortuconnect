<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_blue_purple"
    tools:context=".perizinan.PerizinanFragment">

    <!-- Header / Judul Halaman dengan Tombol Kembali -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Tombol Kembali -->
        <ImageButton
            android:id="@+id/btn_back_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            app:tint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Tombol Kembali" />

        <!-- Judul Terpusat -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perizinan"
            android:fontFamily="@font/fontutama"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Isi Halaman -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <!-- Kartu Formulir Izin -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Formulir Izin"
                        android:fontFamily="@font/fontutama"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/biru"
                        android:layout_marginBottom="16dp"/>

                    <!-- Tanggal Mulai -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Mulai:"
                        android:fontFamily="@font/fontstandar"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/edtTanggalMulai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="yyyy-MM-dd"
                        android:fontFamily="@font/fontstandar"
                        android:inputType="date"
                        android:padding="10dp"
                        android:background="@drawable/rounded_input_bg"
                        android:drawableEnd="@drawable/kalender"
                        android:drawablePadding="8dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_marginBottom="12dp"
                        android:textSize="12sp"
                    tools:ignore="Autofill" />

                    <!-- Tanggal Selesai -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Selesai:"
                        android:fontFamily="@font/fontstandar"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/edtTanggalSelesai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="yyyy-MM-dd"
                        android:fontFamily="@font/fontstandar"
                        android:inputType="date"
                        android:padding="10dp"
                        android:background="@drawable/rounded_input_bg"
                        android:drawableEnd="@drawable/kalender"
                        android:drawablePadding="8dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_marginBottom="12dp"
                        android:textSize="12sp"
                        tools:ignore="Autofill" />

                    <!-- Jenis Izin -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenis Izin:"
                        android:fontFamily="@font/fontstandar"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/spinnerJenisIzin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/jenis_izin_array"
                        android:paddingVertical="10dp"
                        android:background="@drawable/rounded_input_bg"
                        android:layout_marginBottom="12dp"/>

                    <!-- Keterangan Tambahan -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keterangan Tambahan:"
                        android:fontFamily="@font/fontstandar"
                        android:layout_marginBottom="4dp"/>


                    <EditText
                        android:id="@+id/edtKeterangan"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="top"
                        android:hint="Tambahkan alasan disini..."
                        android:textColor="@color/biru"
                        android:fontFamily="@font/fontstandar"
                        android:padding="10dp"
                        android:background="@drawable/rounded_input_bg"
                        android:layout_marginBottom="20dp"
                        tools:ignore="Autofill"
                        android:inputType="textMultiLine"
                    android:textSize="12sp"/>


                    <!-- Tombol Kirim -->
                    <Button
                        android:id="@+id/btnKirimIzin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kirim"
                        android:fontFamily="@font/fontutama"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/biru"
                        app:cornerRadius="8dp"
                        android:paddingVertical="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Filter Bulan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter Bulan:"
                android:fontFamily="@font/fontstandar"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"/>

            <Spinner
                android:id="@+id/spinnerBulanFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/months_array"
                android:paddingVertical="10dp"
                android:background="@drawable/rounded_input_bg"
                android:layout_marginBottom="16dp"/>

            <!-- Status Perizinan -->
            <TextView
                android:id="@+id/tvStatusHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Perizinan"
                android:fontFamily="@font/fontutama"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"/>

            <!-- Container daftar status -->
            <LinearLayout
                android:id="@+id/containerStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>